<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shifts_browser_graph"
    app:startDestination="@id/available_shifts_list">

    <fragment
        android:id="@+id/available_shifts_list"
        android:name="com.shiftkey.codingchallenge.availableshiftsbrowser.presentation.screens.availableshiftslist.AvailableShiftsListFragment"
        android:label="@string/available_shifts_label"
        tools:layout="@layout/fragment_available_shifts_list">
        <action
            android:id="@+id/to_shift_details"
            app:destination="@id/shift_details"
            app:enterAnim="@anim/enter_anim"
            app:exitAnim="@anim/exit_anim"
            app:popEnterAnim="@anim/pop_enter_anim"
            app:popExitAnim="@anim/pop_exit_anim" />

        <action
            android:id="@+id/to_hints_list"
            app:destination="@id/hints_pager" />

    </fragment>

    <fragment
        android:id="@+id/shift_details"
        android:name="com.shiftkey.codingchallenge.availableshiftsbrowser.presentation.screens.shiftdetails.ShiftDetailsFragment"
        android:label="@string/shift_details_label"
        tools:layout="@layout/fragment_shift_details">
        <argument
            android:name="shift"
            app:argType="com.shiftkey.codingchallenge.availableshiftsbrowser.presentation.models.Shift"
            app:nullable="false" />
    </fragment>

    <dialog
        android:id="@+id/hints_pager"
        android:name="com.shiftkey.codingchallenge.availableshiftsbrowser.presentation.screens.hint.HintsListFragment"
        tools:layout="@layout/fragment_hints_pager" />


</navigation>